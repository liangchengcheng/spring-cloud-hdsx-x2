<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdsx.appservice.dao.UserMapper">

    <resultMap id="userMap" type="com.hdsx.appservice.bean.user.UserBean">
        <id column="id" property="id"/>
    </resultMap>

    <!-- 我是为了演示， 所以用了快捷的写法，实际不可如此-->
    <insert id="addUser" parameterType="com.hdsx.appservice.bean.user.UserBean">
        INSERT INTO tb_user (
          id, username, password, phone, email, created, updated, state
        ) VALUES (
          #{id}, #{username}, #{password}, #{phone}, #{email}, NOW(), NOW(), #{state}
        )
    </insert>

    <update id="editUser" parameterType="com.hdsx.appservice.bean.user.UserBean">
        UPDATE tb_user
         username = #{username},
         password = #{password},
         phone = #{phone},
         email = #{email},
         updated = NOW(),
         state = #{state}
        WHERE id = #{id}
    </update>

    <delete id="deleteUserByUserId" parameterType="String">
        DELETE FROM tb_user WHERE id = #{id}
    </delete>

    <select id="getUserByName" parameterType="String" resultMap="userMap">
        SELECT * FROM tb_user WHERE username = #{username}
    </select>

    <select id="getUserById" parameterType="String" resultMap="userMap">
        SELECT * FROM tb_user WHERE id = #{id}
    </select>

    <select id="getUserList" parameterType="com.hdsx.appservice.bean.user.UserQueryBean" resultMap="userMap">
        SELECT * FROM tb_user users WHERE 1 = 1
        <if test="username != null and  username != ''">
            AND users.username LIKE '${username}%'
        </if>
        <if test="phone != null and  phone != ''">
            AND users.phone = #{phone}
        </if>
        <if test="email != null and  email != ''">
            AND users.email = #{email}
        </if>
        <if test="state >= 0">
            AND users.state = #{state}
        </if>
        ORDER BY users.username ASC
        <if test="limit > 0 and  current > -1">
            LIMIT ${limit} OFFSET ${current};
        </if>
    </select>

    <select id="getUserListCount" parameterType="com.hdsx.appservice.bean.user.UserQueryBean" resultType="int">
        SELECT count(*) FROM tb_user users WHERE 1 = 1
        <if test="username != null and  username != ''">
            AND users.username LIKE '${username}%'
        </if>
        <if test="phone != null and  phone != ''">
            AND users.phone = #{phone}
        </if>
        <if test="email != null and  email != ''">
            AND users.email = #{email}
        </if>
        <if test="state >= 0">
            AND users.state = #{state}
        </if>
    </select>
    <update id="changePassWord" parameterType="com.hdsx.appservice.bean.user.ChangePassWordBean">
        UPDATE tb_user
        password = #{password}
        WHERE id = #{id}
    </update>

</mapper>
